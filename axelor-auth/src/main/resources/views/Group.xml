<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views
  http://apps.axelor.com/xml/ns/object-views/object-views_0.8.xsd">

  <grid name="group-grid" title="Groups">
    <field name="name" />
    <field name="code" />
    <field name="restricted"/>
  </grid>

  <form name="group-form" title="User" cols="2">
    <field name="name" />
    <field name="code" />
    <field name="restricted"/>
    <field name="permissions" colSpan="2" onChange="action-validate-group-permissions">
      <grid title="Permissions">
        <field name="name" />
        <field name="object" />
      </grid>
    </field>
  </form>
  
  <action-method name="action-validate-group-permissions">
  	<call class="com.axelor.auth.web.AuthValidator" method="validateGroup"/>
  </action-method>

</object-views>
