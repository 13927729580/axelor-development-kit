<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="role-grid" title="Roles" model="com.axelor.wkf.db.Role">
        <field name="name"/>
    </grid>
    
    <form name="role-form" title="Role" cols="4" model="com.axelor.wkf.db.Role">
        <field name="name" colSpan="2"/>
        <break/>
        <separator title="Description &amp; Utilisateurs" colSpan="4"/>
        <field name="description" showTitle="false" colSpan="2"/>
		<field name="users" colSpan="2" showTitle="false"/>
    </form>
    
</object-views>
